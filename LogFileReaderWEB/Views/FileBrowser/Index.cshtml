@model (IEnumerable<LogFileReaderWEB.Models.FileItem> directories, IEnumerable<LogFileReaderWEB.Models.FileItem> files)
@using System.IO

@{
    ViewBag.Title = "File Browser";
    string currentPath = ViewBag.CurrentPath ?? "Root";

    // Safely get the current folder name
    string folderName = currentPath == "Root"
        ? "Root"
        : currentPath.TrimEnd('/', '\\')            // remove trailing slashes
                     .Split(new[] { '/', '\\' }, StringSplitOptions.RemoveEmptyEntries)
                     .Last();                       // take last folder name
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<style>
    body {
        background-color: #f5f7fa;
        color: #212529;
    }

    .file-browser-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        transition: all 0.2s ease;
    }

        .file-browser-item:hover {
            background-color: #f8f9fa;
            border-color: #0d6efd;
        }

    .file-browser-item-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
    }

    .file-browser-item-content {
        flex: 1;
    }

    .file-browser-item-name {
        font-weight: 500;
        margin: 0;
    }

    .file-browser-item-details {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .section-title {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .item-list {
        display: grid;
        gap: 0.5rem;
    }
</style>

<main class="min-vh-100">
    <div class="container-lg py-5">
        <!-- Header -->
        <div class="mb-5">
           @*  <div class="d-flex align-items-center gap-2 text-muted mb-2">
                <i class="bi bi-folder"></i>
                <span class="small fw-medium">File Browser</span>
            </div> *@
            <h1 class="display-5 fw-bold mb-2">@folderName</h1>
            <p class="text-muted small">Current Path: @currentPath</p>
        </div>

        <!-- Search Section -->
        <div class="card mb-4 border-light">
            <div class="card-body p-4">
                <form method="get" asp-action="Search" asp-controller="FileBrowser">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 text-muted">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="hidden" name="path" value="@currentPath" />
                        <input type="text" class="form-control border-start-0 ps-0" name="keyword" placeholder="Enter keyword..." aria-label="Search files">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Go Up Button -->
        @if (ViewBag.ParentPath != null)
        {
            <a class="btn btn-outline-secondary btn-sm mb-3" href="@Url.Action("Index", new { path = ViewBag.ParentPath })">
                <i class="bi bi-arrow-up"></i> Go Up
            </a>
        }

        <!-- Content -->
        <div id="contentContainer" class="space-y-5">
            @if (!Model.directories.Any() && !Model.files.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-folder" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="text-muted mt-3">No files or folders found</p>
                </div>
            }
            else
            {
                <!-- Folders -->
                @if (Model.directories.Any())
                {
                    <div>
                        <h5 class="section-title">📁 Folders (@Model.directories.Count())</h5>
                        <div class="item-list">
                            @foreach (var dir in Model.directories)
                            {
                                <div class="file-browser-item">
                                    <span class="file-browser-item-icon"><i class="bi bi-folder text-primary"></i></span>
                                    <div class="file-browser-item-content">
                                        <p class="file-browser-item-name">
                                            <a href="@Url.Action("Index", new { path = dir.Path })">@dir.Name</a>
                                        </p>
                                        <p class="file-browser-item-details">Last modified: @dir.Modified</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Files -->
                @if (Model.files.Any())
                {
                    <div class="mt-4">
                        <h5 class="section-title">📄 Files (@Model.files.Count())</h5>
                        <div class="item-list">
                            @foreach (var file in Model.files)
                            {
                                <div class="file-browser-item">
                                    <span class="file-browser-item-icon"><i class="bi bi-file-earmark text-secondary"></i></span>
                                    <div class="file-browser-item-content">
                                        <p class="file-browser-item-name">
                                            <a href="@Url.Action("FileView", new { path = file.Path })">@file.Name</a>
                                        </p>
                                        <p class="file-browser-item-details">@file.Size • @file.Modified</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</main>
