@model List<string>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .bg-customs {
        background: #a9bdbc;
    }
    .btn-custom{
    
        color: #ffff;
        background-color: #066014;
        border-color: #066014;
   
    }
</style>

<div class="card shadow-sm mt-3">
    <div class="card-header text-center bg-customs">
        <h5 class="mb-0">Welcome Log Viewer</h5>
    </div>

    <div class="card-body">
        <form method="post" action="/Home/Index">
            <div class="row g-3">
                <div class="col-12 col-md-4">
                    <label class="form-label fw-semibold">Date</label>
                    <input class="form-control form-control-sm" type="date" name="datevalue" value="@ViewBag.SelectedDate" required />
                </div>

                <div class="col-12 col-md-4">
                    <label class="form-label fw-semibold">Value</label>
                    <input class="form-control form-control-sm" type="text" name="searchValue" value="@ViewBag.SearchValue" />
                </div>

                <div class="col-12 col-md-4 d-flex align-items-end">
                    <button class="btn btn-custom btn-sm w-100" type="submit" name="btnsave">
                        <i class="bi bi-search me-1"></i> View Log
                    </button>
                </div>
            </div>
        </form>

        <div class="mt-4">

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-bordered table-striped">
                        <thead class="table-light position-sticky top-0">
                            <tr>
                                <th>#</th>
                                <th>Log Entry</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                            }
                            @foreach (var line in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td><pre style="margin:0;">@line</pre></td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No log entries to display.</p>
            }
        </div>
    </div>
</div>


